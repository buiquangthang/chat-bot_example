= form_for @laptop do |f|
  - if @laptop.errors.any?
    #error_explanation
      %h2= "#{pluralize(@laptop.errors.count, "error")} prohibited this laptop from being saved:"
      %ul
        - @laptop.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
