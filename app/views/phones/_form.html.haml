= form_for @phone do |f|
  - if @phone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phone.errors.count, "error")} prohibited this phone from being saved:"
      %ul
        - @phone.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
