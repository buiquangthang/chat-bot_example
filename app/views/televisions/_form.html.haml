= form_for @television do |f|
  - if @television.errors.any?
    #error_explanation
      %h2= "#{pluralize(@television.errors.count, "error")} prohibited this television from being saved:"
      %ul
        - @television.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
